{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "Audio": "readonly",
    "AudioContext": "readonly",
    "webkitAudioContext": "readonly",
    "OfflineAudioContext": "readonly",
    "NeuralEventBus": "readonly",
    "NeuralBridge": "readonly"
  }
}
